<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context=".vista.activities.MainActivity"
    android:background="#ffffff"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_main">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/logoGiro"
            android:layout_width="273dp"
            android:layout_height="164dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="24dp"
            android:contentDescription="@string/LogoGiro"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.507"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/txAnioGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="45dp"
            android:text="@string/AnioGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/logoGiro" />

        <TextView
            android:id="@+id/txAnioGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="45dp"
            android:text="@string/AnioGiroValor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txAnioGiro"
            app:layout_constraintTop_toBottomOf="@+id/logoGiro" />

        <TextView
            android:id="@+id/txEdicionGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/EdicionGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txAnioGiro" />

        <TextView
            android:id="@+id/txEdicionGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/EdicionGiroValor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txEdicionGiro"
            app:layout_constraintTop_toBottomOf="@+id/txAnioGiroValor" />

        <TextView
            android:id="@+id/txInicioGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/InicioGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txEdicionGiro" />

        <TextView
            android:id="@+id/txInicioGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/InicioGiroValor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txInicioGiro"
            app:layout_constraintTop_toBottomOf="@+id/txEdicionGiroValor" />

        <TextView
            android:id="@+id/txFinGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/FinGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txInicioGiro" />

        <TextView
            android:id="@+id/txFinGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/FinGiroValor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txFinGiro"
            app:layout_constraintTop_toBottomOf="@+id/txInicioGiroValor" />

        <TextView
            android:id="@+id/txNumEtapasGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/NumEtapasGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txFinGiro" />

        <TextView
            android:id="@+id/txNumEtapasGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/NumEtapasGiroValor"
            android:textSize="20sp"
            app:layout_constraintStart_toEndOf="@+id/txNumEtapasGiro"
            app:layout_constraintTop_toBottomOf="@+id/txFinGiroValor" />

        <TextView
            android:id="@+id/txKmGiro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="16dp"
            android:text="@string/KmGiro"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txNumEtapasGiro"
            app:layout_constraintVertical_bias="0.050000012" />

        <TextView
            android:id="@+id/txKmGiroValor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:text="@string/KmGiroValor"
            android:textSize="20sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txKmGiro"
            app:layout_constraintTop_toBottomOf="@+id/txNumEtapasGiroValor"
            app:layout_constraintVertical_bias="0.0" />

        <ImageView
            android:id="@+id/mascotaGiro"
            android:layout_width="114dp"
            android:layout_height="236dp"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:contentDescription="@string/MascotaGiro"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/txKmGiroValor"
            app:layout_constraintTop_toBottomOf="@+id/logoGiro"
            app:layout_constraintVertical_bias="0.52" />


    </android.support.constraint.ConstraintLayout>
</ScrollView>